<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.UberBookingExperience" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>

    <style name="SplashScreen" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/black</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/uber_foreground</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.UberBookingExperience</item>
    </style>
</resources>